{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "ES2015",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@html2sketch": ["src"],
      "@html2sketch/*": ["src/*"],
      "@test-utils": ["./test/__utils__"],
      "@docs-utils": ["./docs/__utils__"],
      "@e2e-utils": ["./e2e/__utils__"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "**/docs/",
    "**/e2e/",
    "**/test/"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "jest",
    "tslint:latest",
    "tslint-config-prettier",
    "example",
    "docs"
  ]
}
